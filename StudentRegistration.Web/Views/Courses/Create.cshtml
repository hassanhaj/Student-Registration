@model CourseModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post">
    <div class="form-group col-4">
        <label class="control-label" asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group col-4">
        <label class="control-label" asp-for="Period"></label>
        <span asp-validation-for="Period"></span>
        <input class="form-control" asp-for="Period" />
    </div>
    <div class="form-group col-4">
        <button type="submit">
            Save
        </button>
    </div>
</form>


